<header>
    <h2 id="label-fade">{{title}}</h2>
</header>
<div class="modal-content">
    {{#if powerpoints}}
        <h4>Powerpoint</h4>
        {{#each powerpoints}}
            <p>{{title}}</p>
            <a href="{{url}}" target="_blank">{{url}}</a>
        {{/each}}
    {{/if}}
    {{#if books}}
        <h4>Books</h4>
        {{#each books}}
            <p>{{author}}{{#if author}},{{/if}} {{title}}</p>
            <p>{{callNumber}}</p>
        {{/each}}
    {{/if}}
    {{#if videos}}
        <h4>Videos</h4>
        {{#each videos}}
            <p>{{title}}</p>
            <a href="{{url}}" target="_blank">{{url}}</a>
        {{/each}}
    {{/if}}
    {{#if articles}}
        <h4>Articles</h4>
        {{#each articles}}
            <p>{{author}}{{#if author}},{{/if}} {{title}}</p>
            <p>{{callNumber}}</p>
        {{/each}}
    {{/if}}
</div>